@model HoangViet.Models.Orders.OrderDetail

@{
    ViewBag.Title = "Edit";
}

<div class="box-header">
    <h3 class="box-title">Cập nhật chi tiết đơn đặt hàng 
            <small>(@Html.ActionLink("Quay lại đơn đặt hàng", "edit", new { area = "orders", controller = "order", id = Model.OrderId }, new { style = "color:#72afd2" }))</small>
    </h3>
</div>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
  
    @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.ProductId)
    @Html.HiddenFor(model => model.OrderId)
    <div class="box-body">
        <div class="form-group">
            @Html.LabelFor(model => model.UnitPriceExclTax)
            @Html.TextBoxFor(model => model.UnitPriceExclTax, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.UnitPriceExclTax, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Quantity)
            @Html.TextBoxFor(model => model.Quantity, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Quantity, "", new { @class = "text-danger" })
        </div>

    </div>
    <!-- /.box-body -->

    <div class="box-footer">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
   
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
