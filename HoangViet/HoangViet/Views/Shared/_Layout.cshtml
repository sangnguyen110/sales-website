    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">
        var isValid = @Html.Raw(Json.Encode(LayoutViewModel.IsAuthenticated))
            jQuery(function ($) {
                $('form[data-async]').on('submit', function (event) {
                    var $form = $(this);
                    var $target = $($form.attr('data-target'));
                    $.validator.unobtrusive.parse($form);
                    if ($form.valid())
                        $.ajax({
                            type: $form.attr('method'),
                            url: $form.attr('action'),
                            data: $form.serialize(),

                            success: function (data, status) {
                                $target.html(data);

                            }
                        });

                    event.preventDefault();
                });
                $('#searchForm').on('submit', function () {
                    var $searchTerm = $('#searchTerm').val();
                    if ($searchTerm === "") {
                       
                        alert("Bạn phải nhập từ khóa trước!");
                    }
                    else {
                        var $formAction = "/category/search/" + $searchTerm;
                        var $searchCategory = $('#searchCategory').val();
                        if ($searchCategory !== "")
                            $formAction = $formAction + "/" + $searchCategory;
                        $('#searchTerm').attr('disabled', true);
                        $('#searchCategory').attr('disabled', true);
                        $('#searchForm').attr('action', $formAction).submit();

                    }
                
                });
                $('.addtocart').click(function (event) {
                    event.preventDefault();
                    var url = $(this).attr('href');
                    $.getJSON(url, function (data) {
                        $('#welcomeLine span.btn.btn-mini:first').html(data.Total);
                        $('#welcomeLine span p').html(data.CartCount);
                        $('#myCart p').html(data.CartCount);
                        $('#myCart .badge.badge-warning.pull-right').html(data.Total);
                    });
                    // or use return false;
                });
            });
    </script>




