@model HoangViet.ViewModels.HomepageViewModel
@{
    ViewBag.Title = "Trang chủ";
}

<div class="well well-small">
    <h4>Sản phẩm nổi bật <small class="pull-right">@Model.CountFeatureProducts Sản phẩm nổi bật</small></h4>
    <div class="row-fluid">
        <div id="featured" class="carousel slide">
            <div class="carousel-inner">
                <div class="item active">
                    <ul class="thumbnails">
                        @foreach (var product in Model.FeatureProducts.Take(4))
                        {
                            <li class="span3">
                                <div class="thumbnail">
                                    <i class="tag"></i>
                                    <a href="@product.Url"><img src="@product.ImageLink" alt=""></a>
                                    <div class="caption">
                                        <h5>@product.ProductName</h5>
                                        <h4><a class="btn" href="@product.Url">Xem</a> <span class="pull-right">@product.VietnamesePrice</span></h4>
                                    </div>
                                </div>
                            </li>
                        }


                    </ul>
                </div>
                @if (Model.FeatureProducts.Skip(4).Take(4).Count() != 0)
                {
                    <div class="item">
                        <ul class="thumbnails">
                            @foreach (var product in Model.FeatureProducts.Skip(4).Take(4))
                            {
                                <li class="span3">
                                    <div class="thumbnail">
                                        <i class="tag"></i>
                                        <a href="@product.Url"><img src="@product.ImageLink" alt=""></a>
                                        <div class="caption">
                                            <h5>@product.ProductName</h5>
                                            <h4><a class="btn" href="@product.Url">Xem</a> <span class="pull-right">@product.VietnamesePrice</span></h4>
                                        </div>
                                    </div>
                                </li>
                            }


                        </ul>
                    </div>
                }



            </div>
            <a class="left carousel-control" href="#featured" data-slide="prev">‹</a>
            <a class="right carousel-control" href="#featured" data-slide="next">›</a>
        </div>
    </div>
</div>
<h4>Sản phẩm mới </h4>
<ul class="thumbnails" id="new-product">
    @foreach (var product in Model.LatestProducts)
    {
        <li class="span3">
            <div class="thumbnail">
                <a href="@product.Url"><img src="@product.ImageLink" alt="" /></a>
                <div class="caption">
                    <h5>@product.ProductName</h5>
                    <p>
                        @product.ShortDescription
                    </p>

                    <h4 style="text-align:center">
                        <a class="btn" href="@product.Url"> <i class="icon-zoom-in"></i></a>
                        <a class="btn addtocart" href="@Url.Action("addtocart","shoppingcart",new {id=product.Id})">Add to <i class="icon-shopping-cart"></i></a>

                    </h4>
                    <h4 style="text-align:center">
                        <a class="btn btn-primary" href="#">@product.VietnamesePrice </a>

                    </h4>
                </div>
            </div>
        </li>
    }


</ul>

